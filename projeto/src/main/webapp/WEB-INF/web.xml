<?xml version="1.0" encoding="UTF-8"?>
<web-app
   xmlns="http://xmlns.jcp.org/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
   metadata-complete="false"
   version="3.1">

  <servlet>
    <servlet-name>Hello</servlet-name>
    <servlet-class>org.example.HelloServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Hello</servlet-name>
    <url-pattern>/hello/*</url-pattern>
  </servlet-mapping>

	<!-- Departamento -->
  <servlet>
    <servlet-name>ListaDepartamentos</servlet-name>
    <servlet-class>org.example.controllers.departamento.ListaDepartamentosServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListaDepartamentos</servlet-name>
    <url-pattern>/departamentos</url-pattern>
  </servlet-mapping>

	<!-- funcionario -->
	<servlet>
    <servlet-name>ListaFuncionarios</servlet-name>
    <servlet-class>org.example.controllers.funcionario.ListaFuncionariosServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListaFuncionarios</servlet-name>
    <url-pattern>/funcionarios</url-pattern>
  </servlet-mapping>

	<!-- Participações-->
		<servlet>
    <servlet-name>ListaParticipacoes</servlet-name>
    <servlet-class>org.example.controllers.participacao.ListaParticipacoesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListaParticipacoes</servlet-name>
    <url-pattern>/participacoes</url-pattern>
  </servlet-mapping>

	<!-- Projetos -->
		<servlet>
    <servlet-name>ListaProjetos</servlet-name>
    <servlet-class>org.example.controllers.projeto.ListaProjetosServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListaProjetos</servlet-name>
    <url-pattern>/projetos</url-pattern>
  </servlet-mapping>

</web-app>